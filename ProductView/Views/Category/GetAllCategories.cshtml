@model List<ProductView.Models.CategoryModels.CategoryModel>
@{
    ViewBag.Title = "GetAllCategories";
}

<br/>

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Category List <span style="position:relative; left: 50%"><a href="~/Category/AddNewCategory" class="btn btn-success text-white">Create New Category</a></span></h2>
    </div>
    <br />
    <div class="col-12 border p-3 mt-3">
        <form action="/" method="post">
            @if (Model.Count() > 0)
            {
                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Category Id</th>
                                <th scope="col">Category Name</th>
                                <th scope="col">Update</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(m => item.Id)</th>
                                    <td>@Html.DisplayFor(m => item.CategoryName)</td>
                                    <td><a href="/Category/UpdateCategory?categoyId=@item.Id" class="btn btn-info form-control text-white">Update Category</a></td>
                                    <td><a href="/Category/DeleteCategory?categoyId=@item.Id" class="btn btn-danger form-control text-white">Delete Category</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No Categoriesavailables</p>
            }
        </form>
    </div>
</div>