@model List<ProductView.Models.ListProducts>

@{
    ViewBag.Title = "ViewProducts";
}
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Product List <span style="position:relative; left: 50%"><a href="~/Product/CreateNewProduct" class="btn btn-success text-white">Add New Product</a></span></h2>
    </div>
    <br />
    <div class="col-12 border p-3 mt-3">
        <form action="/" method="post">
            @if (Model.Count() > 0)
            {
                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Product Id</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Category Id</th>
                                <th scope="col">Category Name</th>
                                <th scope="col">Update</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <th scope="row">@Html.DisplayFor(m => item.ProductId)</th>
                                <td>@Html.DisplayFor(m => item.ProductName)</td>
                                <td>@Html.DisplayFor(m => item.CategoryId)</td>
                                <td>@Html.DisplayFor(m => item.CategoryName)</td>
                                <td><a href="/Product/UpdateProduct?productId=@item.ProductId" class="btn btn-info form-control text-white">Update Product</a></td>
                                <td><a href="/Product/DeleteProduct?productId=@item.ProductId" class="btn btn-danger form-control text-white">Delete Product</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p style="text-align:center;">No Products available</p>
            }
        </form>
    </div>
</div>